<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.destebanalvarez.avanceproyecto.Elecciones">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opcion"
        android:textSize="30dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/welc"
        android:textColor="#000000" />

    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welc"
        android:layout_marginTop="20dp"
        android:text="@string/color"
        android:onClick="color"
        android:id="@+id/color"/>

    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/color"
        android:layout_marginTop="20dp"
        android:text="@string/ciudad"
        android:onClick="ciudad"
        android:id="@+id/ciudad"/>

    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ciudad"
        android:layout_marginTop="20dp"
        android:text="@string/profesion"
        android:onClick="job"
        android:id="@+id/profesion"/>

    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/color"
        android:layout_below="@+id/welc"
        android:layout_marginTop="20dp"
        android:text="@string/nombre"
        android:onClick="nombre"
        android:id="@+id/nombre"/>

    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/color"
        android:layout_below="@+id/nombre"
        android:layout_marginTop="20dp"
        android:text="@string/apellido"
        android:onClick="apellido"
        android:id="@+id/apellido"/>

    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/color"
        android:layout_below="@+id/apellido"
        android:layout_marginTop="20dp"
        android:text="@string/animal"
        android:onClick="animal"
        android:id="@+id/animal"/>

    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nombre"
        android:layout_below="@+id/welc"
        android:layout_marginTop="20dp"
        android:onClick="pais"
        android:text="@string/pais"
        android:id="@+id/pais"/>


    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nombre"
        android:layout_below="@+id/pais"
        android:layout_marginTop="20dp"
        android:text="@string/frutas"
        android:onClick="frutas"
        android:id="@+id/frutas"/>


    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nombre"
        android:layout_below="@+id/frutas"
        android:layout_marginTop="20dp"
        android:text="@string/comida"
        android:onClick="comida"
        android:id="@+id/comida"/>


    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="230dp"
        android:layout_height="wrap_content"
        android:onClick="goPunt"
        android:layout_below="@+id/animal"
        android:layout_marginTop="20dp"
        android:text="@string/empezar"
        android:id="@+id/empezar"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
